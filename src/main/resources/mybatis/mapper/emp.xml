<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--映射文件配置，namespace指向接口-->
<mapper namespace="com.zc.springbootmybatis.mapper.EmpMapper">
    <!--select 标签代表查询，findById要与接口中的方法名对应上-->
    <select id="findById" parameterType="Integer" resultType="com.zc.springbootmybatis.entity.Emp">
        select * from emp where empno = #{value}
    </select>

    <!--
    resultType='java.util.Map'
    代表将查询到的每一条记录包装成map，key就是字段名，value就是字段值
    LinkedHashMap可以将Map中的数据按插入时保存
    -->
    <select id="findDepts" parameterType="java.util.Map" resultType="java.util.Map">
        select * from emp e, dept d where e.deptno=d.deptno
        <if test="pdname != null">
            and dname = #{pdname}
        </if>
        <if test="psal != null">
            and sal > #{psal}
        </if>

    </select>

    <insert id="create">
        INSERT INTO `scott`.`emp` ( `ename`, `job`, `mgr`, `hiredate`, `sal`, `comm`, `deptno`)
        VALUES (#{ename}, #{job}, #{mgr}, #{hiredate}, #{sal}, #{comm}, #{deptno})
    </insert>
</mapper>


